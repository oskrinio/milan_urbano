/**
 * Implements hook_update().
 */
function onepage_update_8001() {
  $schema = Database::getConnection()->schema();

  $fields = [
    'date_register' => [
        'mysql_type' => 'datetime',
        'not null' => TRUE,
    ]
  ];

  foreach ($fields as $key => $field) {
    if (!$schema->fieldExists('onepage_user', $key)) {
      $schema->addField('onepage_user', $key, $field);
    }
  }
}

